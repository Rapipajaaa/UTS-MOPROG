<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.ubl.a2312500602_rafif_utsb.MainActivity">


    <View
        android:layout_width="match_parent"
        android:layout_height="190dp" />
    <!-- Baris Pertama: Kampus dan Akademik -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/kampus"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kampus"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:onClick="showAkademik"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/akademik"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akademik"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Mengurangi jarak vertikal di antara bagian -->
    <View
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <!-- Baris Kedua: Perpustakaan dan Kantin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/perpustakaan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perpustakaan"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/kantin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kantin"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Memberikan berat layout agar tombol berada di paling bawah -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </LinearLayout>

    <!-- Baris ImageButton di bagian bawah layar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="20dp">

        <!-- Tombol Instagram -->
        <ImageButton
            android:onClick="showIG"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ig"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Instagram"
            android:padding="4dp"
            android:scaleType="fitCenter" />

        <!-- Tombol Facebook -->
        <ImageButton
            android:onClick="showFB"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/facebook"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Facebook"
            android:layout_marginStart="16dp"
            android:padding="4dp"
            android:scaleType="fitCenter" />

        <!-- Tombol Twitter -->
        <ImageButton
            android:onClick="showTWT"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/twitter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Twitter"
            android:layout_marginStart="16dp"
            android:padding="4dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

</LinearLayout>
