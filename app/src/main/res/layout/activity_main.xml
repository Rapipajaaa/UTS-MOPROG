<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.ubl.a2312500602_rafif_utsb.MainActivity">




    <!-- Baris Pertama: Kampus dan Akademik -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="8dp"> <!-- Menambahkan jarak bawah pada baris pertama -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"> <!-- Menambahkan padding pada item kampus -->

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/kampus"
                android:contentDescription="Gambar Jajargenjang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kampus"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"> <!-- Menambahkan padding pada item akademik -->

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/akademik"
                android:contentDescription="Gambar Persegi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akademik"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="130dp" />

    <!-- Baris Kedua: Perpustakaan dan Kantin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="8dp"> <!-- Menambahkan jarak bawah pada baris kedua -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"> <!-- Menambahkan padding pada item perpustakaan -->

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/perpustakaan"
                android:contentDescription="Gambar Segitiga" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perpustakaan"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"> <!-- Menambahkan padding pada item kantin -->

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/kantin"
                android:contentDescription="Gambar Lingkaran" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kantin"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
