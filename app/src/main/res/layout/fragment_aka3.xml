<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/H"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Programming" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SKB" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPK" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bahasa Indonesia" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bahasa Inggris" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PBO" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kalkulus" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALGO 1" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALGO 2" />

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PBPSI" />

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penambangan Data" />

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kecerdasan Tiruan" />

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pemrograman Kecerdasan Tiruan" />

        <Button
            android:id="@+id/button14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matematika Bisnis" />

        <Button
            android:id="@+id/button15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logika Matematika" />

        <!-- Baris ImageButton di bagian bawah layar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="20dp">

            <!-- Tombol Instagram -->
            <ImageButton
                android:onClick="showIG"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ig"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Instagram"
                android:padding="4dp"
                android:scaleType="fitCenter" />

            <!-- Tombol Facebook -->
            <ImageButton
                android:onClick="showFB"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/facebook"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Facebook"
                android:layout_marginStart="16dp"
                android:padding="4dp"
                android:scaleType="fitCenter" />

            <!-- Tombol Twitter -->
            <ImageButton
                android:onClick="showTWT"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/twitter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Twitter"
                android:layout_marginStart="16dp"
                android:padding="4dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
